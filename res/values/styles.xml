<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <style name="Theme.AliFileMgr" parent="@style/Theme.HWDroid.Ali.WithActionBar" />
    <style name="Theme.AliFileMgrGetContext" parent="@style/Theme.HWDroid.Ali.WithActionBar" />
    <style name="ListItemTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/file_list_primary_color</item>
    </style>
    <style name="ListItemTextSecondaryStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">top|left</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/file_list_secondary_color</item>
    </style>
</resources>